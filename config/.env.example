# ==============================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO
# ==============================================
# Copia este archivo como .env y modifica los valores según tu entorno

# Flask Configuration
# ===================
# FLASK_DEBUG: Habilitar modo debug (SOLO para desarrollo local)
# IMPORTANTE: Mantener en 'False' para producción por seguridad
FLASK_DEBUG=False

# FLASK_HOST: Dirección IP donde se ejecutará el servidor
# - 127.0.0.1: Solo acceso local (más seguro)
# - 0.0.0.0: Acceso desde cualquier IP (usar solo si necesario)
FLASK_HOST=127.0.0.1

# FLASK_PORT: Puerto donde se ejecutará el servidor
FLASK_PORT=5000

# Security Configuration
# ======================
# SECRET_KEY: Clave secreta para Flask (OBLIGATORIO cambiar en producción)
# Generar con: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration (if needed for future features)
# DATABASE_URL=sqlite:///game.db

# Development Environment Example
# ===============================
# Para desarrollo local, puedes usar:
# FLASK_DEBUG=True
# FLASK_HOST=127.0.0.1
# FLASK_PORT=5000

# Production Environment Example
# ==============================
# Para producción, SIEMPRE usar:
# FLASK_DEBUG=False
# FLASK_HOST=127.0.0.1 (o la IP específica necesaria)
# SECRET_KEY=<clave-secreta-generada-aleatoriamente>

# Security Configuration
# CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Game Configuration
# MAX_GAMES_PER_USER=10
# GAME_TIMEOUT_SECONDS=3600

# Logging Configuration
# LOG_LEVEL=INFO
# LOG_FILE=game.log

# Production settings (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=False